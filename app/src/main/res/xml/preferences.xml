<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:textSize="30sp"
        android:title="Профиль">

        <EditTextPreference
            android:key="name"
            android:title="Имя"
            android:inputType="textPersonName"
            android:summary="Измените ваше имя"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:textSize="30sp"
        android:title="Ночной режим">

        <ListPreference
            android:key="pref_day_night"
            android:title="Ночной режим"
            android:summary="Настройте внешний вид приложения"
            android:defaultValue="3"
            android:entries="@array/day_night"
            android:entryValues="@array/day_night"
            android:dialogTitle="Ночной режим"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:textSize="30sp"
        android:title="Поделиться">

        <intent
            android:action="android.intent.action.SEND"
            android:data="Поделиться"/>

    </PreferenceCategory>
</PreferenceScreen>